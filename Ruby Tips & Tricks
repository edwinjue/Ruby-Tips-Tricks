# Define method 'squish' in class String 
class String
  # Performs a destructive squish. See String#squish.
  #   str = " foo   bar    \n   \t   boo"
  #   str.squish!                         # => "foo bar boo"
  #   str                                 # => "foo bar boo"
  def squish!
    gsub!(/[[:space:]]+/, ' ')
    strip!
    self
  end
end

# Then define one that doesn't modify the receiver using .dup
def squish
  dup.squish!
end

